<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.entity">
    <class name="Pet" table="pet" dynamic-update="true">

        <id name="id" column="id" type="long">
            <generator class="native" />
        </id>

        <property name="invalid" column="invalid" type="boolean" />

        <property name="status" column="status" type="integer" />

        <property name="createdDatetime" column="created_datetime" type="timestamp" />

        <property name="updatedDatetime" column="updated_datetime" type="timestamp" />

        <many-to-one name="user"  class="com.entity.User" column="user_id" cascade="none" foreign-key="none" />

        <set name="labels" table="label" order-by="updatedDatetime">
            <key>
                <column name="pet"/>
            </key>
            <one-to-many class="com.entity.Label" />
        </set>

        <set name="pictures" table="picture" order-by="updatedDatetime">
            <key>
                <column name="pet"/>
            </key>
            <one-to-many class="com.entity.Picture" />
        </set>

        <property name="type" column="type" type="integer" />

        <property name="name" column="name" type="string" />

        <property name="description" column="description" type="string" />

    </class>
</hibernate-mapping>