<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.entity">
    <class name="UserInfo" table="user_info" dynamic-update="true">

        <id name="id" column="id" type="long">
            <generator class="native" />
        </id>

        <property name="invalid" column="invalid" type="boolean" />

        <property name="status" column="status" type="integer" />

        <property name="createdDatetime" column="created_datetime" type="timestamp" />

        <property name="updatedDatetime" column="updated_datetime" type="timestamp" />

        <many-to-one name="user"  class="com.entity.User" column="user_id" cascade="none" foreign-key="none" />

        <many-to-one name="avatar"  class="com.entity.Picture" column="avatar_id" cascade="none" foreign-key="none" />

        <property name="type" column="type" type="integer" />

        <property name="realName" column="real_name" type="string" />

        <property name="sex" column="sex" type="byte" />


    </class>
</hibernate-mapping>